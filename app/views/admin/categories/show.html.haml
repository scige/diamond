%h2 Show category

= form_for [:admin, @category], :html => {:class=>"form-horizontal"} do |f|
  .control-group
    = f.label :name, :class=>"control-label"
    .controls
      = f.text_field :name, :class=>"input-xxlarge", :disabled=>"disabled"

  .control-group
    .controls
      = link_to 'Edit', edit_admin_category_path(@category), :class=>"btn btn-info"
      = link_to 'Back', admin_categories_path, :class=>"btn"

