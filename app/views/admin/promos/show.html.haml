%h2 Show promo

= form_for @promo, :html => {:class=>"form-horizontal"} do |f|
  .control-group
    = f.label :name, :class=>"control-label"
    .controls
      = f.text_field :name, :class=>"input-xxlarge", :disabled=>"disabled"
  .control-group
    = f.label :content, :class=>"control-label"
    .controls
      = f.text_field :content, :class=>"input-xxlarge", :disabled=>"disabled"
  .control-group
    = f.label :begin_at, :class=>"control-label"
    .controls
      = f.text_field :begin_at, :class=>"input-xxlarge", :disabled=>"disabled"
  .control-group
    = f.label :end_at, :class=>"control-label"
    .controls
      = f.text_field :end_at, :class=>"input-xxlarge", :disabled=>"disabled"
  .control-group
    = f.label :thumb, :class=>"control-label"
    .controls
      = f.text_field :thumb, :class=>"input-xxlarge", :disabled=>"disabled"

  .control-group
    .controls
      = link_to 'Edit', edit_admin_promo_path(@promo), :class=>"btn btn-info"
      = link_to 'Back', admin_promos_path, :class=>"btn"

