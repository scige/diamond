%h2 打折详情

= form_for [:admin, @promo], :html => {:class=>"form-horizontal"} do |f|
  .control-group
    = f.label :status, "状态", :class=>"control-label"
    .controls
      = f.text_field :status, :class=>"input-xxlarge", :disabled=>"disabled"
  .control-group
    = f.label :remarks, "审核记录", :class=>"control-label"
    .controls
      = f.text_area :remarks, :rows=>6, :class=>"input-xxlarge", :disabled=>"disabled"
  .control-group
    = f.label :name, "名称", :class=>"control-label"
    .controls
      = f.text_field :name, :class=>"input-xxlarge", :disabled=>"disabled"
  .control-group
    = f.label :content, "内容", :class=>"control-label"
    .controls
      = f.text_area :content, :rows=>6, :class=>"input-xxlarge", :disabled=>"disabled"
  .control-group
    = f.label :begin_at, "开始日期", :class=>"control-label"
    .controls
      = f.text_field :begin_at, :class=>"input-xxlarge", :disabled=>"disabled"
  .control-group
    = f.label :end_at, "结束日期", :class=>"control-label"
    .controls
      = f.text_field :end_at, :class=>"input-xxlarge", :disabled=>"disabled"

  .control-group
    = f.label :thumb, "照片", :class=>"control-label"
    .controls
      = image_tag @promo.thumb_url(:normal)

  .control-group
    = f.label "商家信息", :class=>"control-label"
    .controls
      - @promo.shops.each do |shop|
        %p= link_to shop.name, admin_shop_path(shop), :target=>"_blank", :class=>"btn btn-danger"

  .control-group
    .controls
      = link_to 'Edit', edit_admin_promo_path(@promo), :class=>"btn btn-info"
      = link_to 'Back', admin_promos_path, :class=>"btn"

