= form_for [:admin, @shop_promo_relationship], :html => {:class=>"form-horizontal"} do |f|
  - if @shop_promo_relationship.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shop_promo_relationship.errors.count, "error")} prohibited this shop_promo_relationship from being saved:"
      %ul
        - @shop_promo_relationship.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :shop_id, :class=>"control-label"
    .controls
      = f.text_field :shop_id, :class=>"input-xxlarge"

  .control-group
    = f.label :promo_id, :class=>"control-label"
    .controls
      = f.text_field :promo_id, :class=>"input-xxlarge"

  .control-group
    .controls
      = f.submit :class=>"btn btn-success"
      = link_to 'Back', admin_shop_promo_relationships_path, :class=>"btn"

