%section.shop-promo
  .promo-details
    %h6= @promo.name
    - if @promo.thumb and !@promo.thumb.empty?
      .media#media= image_tag(@promo.thumb)
    .promo-txt= @promo.content
    %p.promo-time= "有效期：#{get_format_date(@promo.begin_at)} 至 #{get_format_date(@promo.end_at)}"

  %a{:class=>"icon-btn", :href=>"javascript:;"}
    发送到手机
    %i.client

  .promo-suit
    %h6 适用商户
    .coupon-list.coupon-list-m
      %ul
        - @promo.shops.each do |shop|
          %li
            %a
              %p.tit
                = shop.name
                %em.tips &lt;100m
                %p.explai= shop.address

  %br
  = form_tag coupons_path(:spm=>@guid) do |f|
    %p
      = hidden_field_tag :shop_id, @shop_id
      = hidden_field_tag :promo_id, @promo.id
    %p
      = label_tag :mobile, "手机"
      = text_field_tag :mobile, @weixin_user ? @weixin_user.mobile : ""
    %p
      = submit_tag "确定"
      %input#cancel{:type=>"button", :value=>"取消", :name=>"cancel"}

